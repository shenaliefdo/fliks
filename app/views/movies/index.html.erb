<h1><%= @movies.size%> Movies:</h1>

<ul>
    <%@movies.each do |movie|%>
        <article>
        <header>
        <h2><%=movie.title%></h2>
        </header>
        <p><%=movie.description%></p>
        <table>
        <tr>
        <th>Release Date:</th>
        <td><%=movie.released_on%></td>
        </tr>
        <th>Rating:</th>
        <td><%=movie.rating%></td>
        </tr>
        <th>Total Gross:</th>
        <td><%=number_to_currency(movie.total_gross)%></td>
        </tr>
        </table>
        </article>
    <%end%>
</ul>
